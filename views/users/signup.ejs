<%-layout("layouts/boilerplate")%>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <h1>Signup For WnaderLust</h1>
       <form action="/signup" method="post" class="needs validation" novalidate>

        <div class="row">
        <div class="mb-3 col-md-8">
          <label for="username" class="form-label">Username : </label>
          <input type="string" placeholder="Enter username" name="username" id="username" class="form-control" required > 
          <div class="invalid-feedback">Looks Good !</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="email" class="form-label">email : </label>
          <input type="email" placeholder="Enter email" name="email" id="email" class="form-control" required > 
          <div class="invalid-feedback">Looks Good !</div>
        </div>

              <div class="mb-3 col-md-8">
          <label for="password" class="form-label">password : </label>
          <input type="password" placeholder="Enter password" name="password" id="password" class="form-control" required > 
          <div class="invalid-feedback">Looks Good !</div>
        </div>

           <div class="mb-3 col-md-8">
        <button class="btn btn-success w-100">Signup</button>
    </div>

       </form>
    </div>
</div>